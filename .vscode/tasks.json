{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile C++",
			"command": "g++ -o '${fileDirname}/${fileBasenameNoExtension}' '${file}' -std=c++17 -Wall -Wextra -pedantic-errors -std=c++17 -O3 -march=native -mtune=native",
		},
		{
			"type": "shell",
			"label": "Run C++",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
		},
		{
			"type": "shell",
			"label": "Run Python",
			"command": "python '${fileDirname}/${fileBasenameNoExtension}.py'",
		},
		{
			"type": "shell",
			"label": "Fill C++ File with template",
			"command": "cat .vscode/template_cpp.cpp > ${file}",
		},
	]
}